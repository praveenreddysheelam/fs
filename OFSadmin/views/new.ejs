<%- include ('partials/header') %>
<div class="container">
<h1> New Product </h1>


<form action="/admin" method="POST" enctype="multipart/form-data">

<div class="row">
<div class="form-group col-md-4">
	<input type="text" name="title" class="form-control" placeholder="title" >
</div>
</div>
<div class="row">
 <div class="form-group col-md-4">
	<input type="text" name="category" class="form-control" placeholder="category" >
</div>
</div>
<div class="row">
<div class="col-md-2">
	<input type="file" name="file" class="form-control" placeholder="image name" >
</div>
</div>
<div class="row">
 <div class="form-group col-md-4">
	<input type="text" name="rating" class="form-control" placeholder="Rating" >
</div>
</div>
<div class="row">
<div class="form-group col-md-4">
	<input type="text" name="cost" class="form-control" placeholder="Product Cost" >
</div>
</div>
<div class="row">
 <div class="form-group col-md-4">
	<textarea name="description" class="form-control" placeholder="description"></textarea>
</div>
</div>
<div class="row">
<div class="form-group col-md-4">
	<button type="submit" class="btn btn-info" >Save</button>
</div>
</div>
</div>


</form>

<a href="/">Cancel</a>

</div>

<%- include ('partials/footer') %>