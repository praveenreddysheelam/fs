<%- include ('partials/header2') %>


<div class="container">
<div class="row">
<h1> Product Details </h1>

<p><img src="/images/<%= product.image %>" width="300px" height="300px" /></p>
<p>Title: <%= product.title %></p>
<p>Category: <%= product.category %></p>
<p> Cost :  <%= product.cost %></p>
<p>Description: <%= product.description %></p>
<div class="col-md-1">
<a class="btn btn-warning" href="/products/cart/<%= product._id %>" role="button">
Add to Cart</a>
</div>
<div class="col-md-1">
<a class="btn btn-warning" href="/admin/edit/<%= product._id %>" role="button">
Edit Product</a>
</div>
<div class="col-md-1">
<a class="btn btn-warning" href="/admin/delete/<%= product._id %>" role="button">
Delete</a>
</div>
</div>




</div>
<%- include ('partials/footer') %>
