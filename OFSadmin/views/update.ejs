<%- include ('partials/header') %>
<div class="container">
<h1> New movie </h1>


<form action="/videos/<%= video._id %>?_method=PUT" method="POST">

<div class="form-group">
	<input type="text" name="title" class="form-control" placeholder="title" value="<%= video.title%>">
</div>
 <div class="form-group">
	<input type="text" name="genre" class="form-control" placeholder="genre" value="<%= video.genre%>">
</div>
<div class="form-group">
	<input type="text" name="image" class="form-control" placeholder="image name" value="<%= video.image%>">
</div>
 <div class="form-group">
	<textarea value="desc" name="desc" class="form-control" placeholder="description"><%= video.description %>
	</textarea>
</div>
<div class="form-group">
	<button type="submit" class="btn btn-info" >Save</button>
</div>


</form>

<a href="/">Cancel</a>

</div>

<%- include ('partials/footer') %>